


{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <div class="container">
        <h1 class="mt-5 mb-4">Salle index</h1>

        <div class="row mb-4">
            <div class="col">
                <a href="{{ path('app_salle_new') }}" class="btn btn-primary">Create New Salle</a>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Numero</th>
                            <th scope="col">Capacite</th>
                            <th scope="col">Etage</th>
                            <th scope="col">Nomdepart</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody >
                    {% for salle in salles %}
                        <tr>
                            <td>{{ salle.id }}</td>
                            <td>{{ salle.numero }}</td>
                            <td>{{ salle.capacite }}</td>
                            <td>{{ salle.etage }}</td>
                            <td>{{ salle.nomdepart }}</td>
                            <td>
                                <a href="{{ path('app_salle_show', {'id': salle.id}) }}" class="btn btn-sm btn-info">Show</a>
                                <a href="{{ path('app_salle_edit', {'id': salle.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
